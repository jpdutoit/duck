module SinOsc {
  Phasor phasor;
  frequency freq : this.phasor.freq;
  frequency input : this.phasor.input;
  mono output;

  //TODO: Implement pipes in definition
  //sin(phasor * 2 * 3.141592) >> mono output;

  function tick() {
    output = sin(phasor * 2 * 3.141592);
  }
}


module Triangle {
  Phasor phasor;
  frequency freq : this.phasor.freq;
  frequency input : this.phasor.input;
  mono output;

  function tick() {
    output = abs(phasor * 2 - 1.0) * 2 - 1;
  }
}

module SawTooth {
  Phasor phasor;
  frequency freq : this.phasor.freq;
  frequency input : this.phasor.input;
  mono output;

  function tick() {
    output = phasor * 2 - 1;
  }
}

