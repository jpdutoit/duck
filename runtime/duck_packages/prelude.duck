module Phasor {
  frequency freq = 440 hz;
  mono phase = 0;
  mono output = 0;
  frequency input = 440 hz;

  function tick() {
    output = phase;
    phase = (phase + (input / SAMPLE_RATE)) % 1.0;
  }
}

module Clock {
  frequency freq = 440 hz;
  mono phase = 1.0;
  mono output = 0;
  frequency input : this.freq;

  function tick() {
    phase = (phase + (freq / SAMPLE_RATE));
