module SinOsc {
  phasor: Phasor;
  freq: this.phasor.freq;
  input: this.phasor.freq;
  output: mono;

  //TODO: Implement pipes in definition
  //sin(phasor * 2 * 3.141592) >> output: mono;

  function tick() {
    output = sin(phasor * 2 * 3.141592);
  }
}


module Triangle {
  phasor: Phasor;
  freq: this.phasor.freq;
  input: this.phasor.freq;
  output: mono;

  function tick() {
    output = abs(phasor * 2 - 1.0) * 2 - 1;
  }
}

module SawTooth {
  phasor: Phasor;
  freq: this.phasor.freq;
  input: this.phasor.freq;
  output: mono;

  function tick() {
    output = phasor * 2 - 1;
  }
}

